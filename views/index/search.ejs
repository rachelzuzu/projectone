<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../partials/head %>
</head>
<body>

	<% include ../partials/navbar %>

	<div class="container">
	
		<div class="row">
			<div class="col-xs-6 col-xs-offset-3">
				<h3>Make a random search:</h3>
				<form class="myForm" method="GET" action="/search">
					<input type="text" name="q" placeholder="Search">
					<button>Click me</button>
				</form>
			</div>
		</div>
		<div class="row">
			<% if (noHappyHours) { %>
				<div class="col-xs-6 col-xs-offset-3"> </div>
			<% } else { %>
				<% venues.forEach(function(venue){ %>
					<div class="row">
						<div class="col-xs-6 col-xs-offset-3">
							<%= venue.name %>
						</div>
					</div>
				<% }) %>
			<% } %>
		</div>
	</div>

<div class="col-xs-6 col-xs-offset-3">
	<!-- Hide post form if not logged in -->
	<% if (userId) { %>
		<h3>Tell us what it is:</h3>
		<form method="POST" action="/search">
			<input type="text" name="title" placeholder="Title">
			<input type="text" name="content" placeholder="Description">
			<button type="submit">Submit</button>
		</form>
		<br>
		<br>
	<% } %>
</div>

	
</body>
</html>