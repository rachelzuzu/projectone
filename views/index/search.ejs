<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../partials/head %>
</head>
<body>

	<% include ../partials/navbar %>

	<div class="container">
	
		<div class="row">

			<div class="col-xs-6 col-xs-offset-3">
				<h1>Foursquare Top 30:</h1>
				<form class="navbar-form navbar-left"  method="GET" action="/search">
					<input type="text" class="form-control" name="q" placeholder="ENTER ANY WORD">
					<button class="btn btn-default">Search</button>
				</form>
			</div>
		</div>
		<div class="row">
			<% if (noHappyHours) { %>
				<div class="col-xs-6 col-xs-offset-3"> </div>
			<% } else { %>
				<% venues.forEach(function(venue){ %>
					<div class="row">
						<div class="col-xs-6 col-xs-offset-3">
							<%= venue.name %>
						</div>
					</div>
				<% }) %>
			<% } %>
		</div>
	</div>
</br>
</br>
<div class="col-xs-6 col-xs-offset-3">
	
	<!-- Hide post form if not logged in -->
	<% if (userId) { %>
		<h3>Make a post about it:</h3>
		<form method="POST" class="navbar-form navbar-left" action="/search">
			<input type="text" class="form-control" name="title" placeholder="Title">
			<input type="text" class="form-control" name="content" placeholder="Description">
			<button type="submit" class="btn btn-default">Submit</button>
		</form>
		<br>
		<br>
	<% } %>
</div>

<% include ../partials/footer %>
	
</body>
</html>